<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
  <ol class="breadcrumb border-0  p-lg-0  ">
    <li class="breadcrumb-item"><a href="/" class="">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
  </ol>
</nav>

<section class="py-2 w-100">
  <h3>Welcome {{user.name}}</h3>
</section>

<section class="py-2 w-100">
  {{#if stories}}
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each stories}}
      <tr>
        <td>
          <a href="/stories/{{_id}}">{{title}}</a>
        </td>
        <td>{{createdAt}}</td>
        <td>{{status}}</td>
        <td></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
  <div class=" d-flex justify-content-center flex-column align-items-center  w-100 mt-3">
    <i class=" fas fa-sad-tear fa-4x "></i>
    <p class="mt-3">You not have any stories</p>
  </div>
  {{/if}}
</section>